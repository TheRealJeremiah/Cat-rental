<form action= <%= cat_cat_rental_requests_url %> method="post">
  <label>Cat:
  <select name="cat_rental_request[cat_id]">
    <option></option>
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>" <%= "selected" if cat.id.to_s == @cat_id %> ><%= cat.name %></option>
    <% end %>
  </select>
  </label>
  <br><br>
  <label>Start date:
  <input type="date" name="cat_rental_request[start_date]" value="<%= @cat_rental_request.start_date %>">
  </label>
  <br><br>
  <label>End date:
  <input type="date" name="cat_rental_request[end_date]" value="<%= @cat_rental_request.end_date %>">
  </label>
  <br><br>
  <input type="submit" value="Submit request">
</form>
